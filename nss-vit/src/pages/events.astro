    activities: [
      {
        name: "NSS Day Celebrations",
        location: "University Campus",
        description: "Annual celebration of NSS Day with cultural programs, exhibitions, and recognition of outstanding volunteers who have contributed significantly to social service."
      },
      {
        name: "Youth Festival",
        location: "Various Locations",
        description: "Inter-college competitions promoting cultural exchange, social awareness, and youth engagement through various performing arts and social activities."
