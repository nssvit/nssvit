---

<MainLayout
  title="NSS VIT | Events & Activities"
  description="Explore the wide range of community service events and social activities organized by NSS VIT throughout the year."
>
  <Navbar />

  <section class="py-20 bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen">
    <div class="container-custom">
      <!-- Hero Section -->
      <div class="text-center mb-16 animate-fade-in">
        <h1 class="section-title">Our Events & Activities</h1>
        <p class="section-subtitle">
          Making a difference through diverse community service initiatives and social programs
        </p>
      </div>

      <!-- Event Categories -->
      <div class="space-y-12">
        {eventCategories.map((category, catIndex) => (
          <div class="animate-slide-up" style={`animation-delay: ${catIndex * 0.1}s`}>
            <!-- Category Header -->
            <div class="mb-6">
              <div class="flex items-center justify-center md:justify-start mb-3">
                <span class="text-4xl mr-3">{category.icon}</span>
                <h2 class={`text-3xl font-bold bg-gradient-to-r ${category.color} bg-clip-text text-transparent`}>
                  {category.title}
                </h2>
              </div>
              <p class="text-gray-600 text-center md:text-left max-w-3xl">
                {category.description}
              </p>
            </div>

            <!-- Activities Grid -->
            <div class="grid md:grid-cols-2 gap-6">
              {category.activities.map((activity, actIndex) => (
                <div
                  class="card p-6 hover:scale-105 transition-all duration-300"
                  style={`animation-delay: ${(catIndex * 0.1) + (actIndex * 0.05)}s`}
                >
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{activity.name}</h3>

                  <div class="flex items-center text-sm text-primary-600 mb-3">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span>{activity.location}</span>
                  </div>

                  <p class="text-gray-700 leading-relaxed">
                    {activity.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Impact Stats -->
      <div class="mt-20 card p-8 bg-gradient-to-br from-primary-600 to-primary-800 text-white">
        <h2 class="text-3xl font-bold text-center mb-12">Our Impact</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold mb-2">50+</div>
            <div class="text-sm opacity-90">Events Per Year</div>
          </div>
          <div>
            <div class="text-4xl font-bold mb-2">100+</div>
            <div class="text-sm opacity-90">Active Volunteers</div>
          </div>
          <div>
            <div class="text-4xl font-bold mb-2">5000+</div>
            <div class="text-sm opacity-90">Hours of Service</div>
          </div>
          <div>
            <div class="text-4xl font-bold mb-2">10+</div>
            <div class="text-sm opacity-90">Communities Served</div>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center mt-16">
        <a href="/gallery" class="btn-primary inline-flex items-center text-lg">
          View Event Gallery
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>
