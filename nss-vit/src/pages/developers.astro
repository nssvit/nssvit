---
/**
 * ╻ NSS-VIT
 * ┃ ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
 * ┃ Not Me, But You
 * ┃
 * ┃ developers.astro
 * ╹ src/pages/
 */
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/shared/PageHeader.astro';
import { sanityClient } from 'sanity:client';

// Load developers data from Sanity
const developersRaw = await sanityClient.fetch(`
  *[_type == "developer"] | order(order asc) {
    _id,
    name,
    role,
    description,
    linkedin,
    github,
    email,
    website,
    "photo": photo.asset->url,
    order
  }
`);

// Load team members to match photos by name
const teamMembers = await sanityClient.fetch(`
  *[_type == "teamMember"] {
    name,
    "photo": photo.asset->url
  }
`);

// Helper to normalize names for matching
const normalizeName = (name: string) => name.toLowerCase().replace(/[^a-z]/g, '');

// Match developer photos from team members if developer doesn't have one
const developers = (developersRaw || []).map((dev: any) => {
  if (!dev.photo) {
    const matchingMember = teamMembers?.find((member: any) =>
      normalizeName(member.name) === normalizeName(dev.name)
    );
    if (matchingMember?.photo) {
      return { ...dev, photo: matchingMember.photo };
    }
  }
  return dev;
});

// Determine grid layout based on number of developers
const isSingle = developers.length === 1;
---

<BaseLayout
  title="Developers"
  description="Meet the team behind the NSS VIT website."
>
  <PageHeader
    label="Website Credits"
    title="MEET THE DEVELOPERS"
    description="The talented individuals who built and maintain this website."
  />

  <section class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10 pb-24">
    <div class={`grid gap-8 mx-auto ${isSingle ? 'max-w-md' : 'grid-cols-1 md:grid-cols-2 max-w-4xl'}`}>
      {(developers || []).map((dev: any) => (
        <div class="border border-swiss-gray-200 hover:border-primary transition-colors p-8">
          <div class="flex flex-col items-center text-center">
            <div class="w-32 h-32 rounded-full overflow-hidden border-2 border-swiss-gray-100 mb-6 bg-swiss-gray-100">
              {dev.photo && <img src={dev.photo} alt={dev.name} class="w-full h-full object-cover" />}
            </div>
            <h3 class="text-title text-text mb-1">{dev.name}</h3>
            <p class="text-caption text-primary mb-4">{dev.role}</p>
            {dev.description && (
              <p class="text-body text-swiss-gray-600 mb-6">{dev.description}</p>
            )}
            <div class="flex gap-3">
              {dev.linkedin && (
                <a href={dev.linkedin} target="_blank" rel="noopener" class="w-10 h-10 border border-swiss-gray-200 flex items-center justify-center text-swiss-gray-400 hover:border-primary hover:text-primary transition-colors" aria-label="LinkedIn">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
                </a>
              )}
              {dev.github && (
                <a href={dev.github} target="_blank" rel="noopener" class="w-10 h-10 border border-swiss-gray-200 flex items-center justify-center text-swiss-gray-400 hover:border-primary hover:text-primary transition-colors" aria-label="GitHub">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                </a>
              )}
              {dev.website && (
                <a href={dev.website} target="_blank" rel="noopener" class="w-10 h-10 border border-swiss-gray-200 flex items-center justify-center text-swiss-gray-400 hover:border-primary hover:text-primary transition-colors" aria-label="Website">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M2 12h20"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
                </a>
              )}
              {dev.email && (
                <a href={`mailto:${dev.email}`} class="w-10 h-10 border border-swiss-gray-200 flex items-center justify-center text-swiss-gray-400 hover:border-primary hover:text-primary transition-colors" aria-label="Email">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
