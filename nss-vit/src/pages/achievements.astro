---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const achievements = await getCollection('achievements');
const sortedAchievements = achievements.sort((a, b) => a.data.order - b.data.order);
---

<MainLayout
  title="NSS VIT | Achievements"
  description="Explore the remarkable achievements and milestones of NSS VIT. Discover our impact through various social initiatives and community service projects."
>
  <Navbar />

  <section class="py-20 bg-gradient-to-br from-yellow-50 via-white to-orange-50 min-h-screen">
    <div class="container-custom">
      <div class="text-center mb-16 animate-fade-in">
        <h1 class="section-title">Our Achievements</h1>
        <p class="section-subtitle">
          Celebrating our victories and recognitions in various competitions and events
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedAchievements.map((achievement, index) => (
          <div
            class="card group overflow-hidden hover:scale-105 transition-all duration-300 animate-slide-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="relative h-64 overflow-hidden bg-gradient-to-br from-yellow-100 to-orange-100">
              <img
                src={achievement.data.image}
                alt={achievement.data.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
              />

              <div class="absolute top-4 right-4 bg-yellow-500 text-white p-2 rounded-full shadow-lg">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>

            <div class="p-6 space-y-3">
              <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                {achievement.data.title}
              </h3>
              <div class="flex items-start space-x-2">
                <svg class="w-5 h-5 text-primary-600 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <p class="text-sm text-gray-600 leading-relaxed">{achievement.data.institution}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      {sortedAchievements.length === 0 && (
        <div class="text-center py-20">
          <p class="text-gray-500 text-lg">More achievements coming soon!</p>
        </div>
      )}
    </div>
  </section>

  <Footer />
</MainLayout>
