---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Gallery categories
const categories = [
  { id: 'all', name: 'All Photos', count: 127 },
  { id: 'camp', name: 'Special Camp', count: 33 },
  { id: 'area-based-1', name: 'Area Based 1', count: 18 },
  { id: 'area-based-2', name: 'Area Based 2', count: 21 },
  { id: 'university', name: 'University Events', count: 13 },
  { id: 'college', name: 'College Events', count: 12 },
  { id: 'achievements', name: 'Achievements', count: 8 },
];
---

<MainLayout
  title="NSS VIT | Gallery"
  description="Explore our journey through photos. View highlights from NSS VIT events, camps, and community service activities."
>
  <Navbar />

  <section class="py-20 bg-gradient-to-br from-purple-50 via-white to-pink-50 min-h-screen">
    <div class="container-custom">
      <!-- Hero Section -->
      <div class="text-center mb-16 animate-fade-in">
        <h1 class="section-title">Our Gallery</h1>
        <p class="section-subtitle">
          Moments captured from our journey of service, learning, and community impact
        </p>
      </div>

      <!-- Category Filter -->
      <div class="mb-12">
        <div class="flex flex-wrap justify-center gap-3">
          {categories.map((category) => (
            <button
              class="category-btn px-6 py-3 rounded-full font-semibold transition-all duration-300 bg-white border-2 border-gray-200 text-gray-700 hover:border-primary-600 hover:text-primary-600 hover:shadow-lg"
              data-category={category.id}
            >
              {category.name}
              <span class="ml-2 text-sm opacity-70">({category.count})</span>
            </button>
          ))}
        </div>
      </div>

      <!-- Gallery Coming Soon Card -->
      <div class="max-w-4xl mx-auto">
        <div class="card p-12 text-center bg-gradient-to-br from-primary-600 to-primary-800 text-white">
          <div class="mb-6">
            <svg class="w-24 h-24 mx-auto opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>

          <h2 class="text-4xl font-bold mb-4">Interactive Gallery Coming Soon!</h2>
          <p class="text-lg mb-8 opacity-90 max-w-2xl mx-auto">
            We're building an amazing interactive gallery experience to showcase our 127+ photos from events, camps, and activities. Check back soon!
          </p>

          <!-- Temporary Image Grid Preview -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-12 opacity-50">
            {[1, 2, 3, 4, 5, 6, 7, 8].map((i) => (
              <div class="aspect-square bg-white/20 rounded-lg backdrop-blur-sm animate-pulse"></div>
            ))}
          </div>

          <!-- Social Media CTA -->
          <div class="mt-12 pt-8 border-t border-white/20">
            <p class="text-lg mb-4">In the meantime, check out our latest photos on Instagram!</p>
            <a
              href="https://www.instagram.com/nss.vit"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center btn-secondary bg-white text-primary-600 hover:bg-gray-100"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              Visit @nss.vit
            </a>
          </div>
        </div>
      </div>

      <!-- Featured Stats -->
      <div class="grid md:grid-cols-3 gap-6 mt-16">
        <div class="card p-6 text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">127+</div>
          <div class="text-gray-600">Photos in Collection</div>
        </div>
        <div class="card p-6 text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">50+</div>
          <div class="text-gray-600">Events Documented</div>
        </div>
        <div class="card p-6 text-center">
          <div class="text-4xl font-bold text-primary-600 mb-2">2</div>
          <div class="text-gray-600">Years of Memories</div>
        </div>
      </div>
    </div>
  </section>

  <Footer />

  <script>
    // Category filter functionality (placeholder for future implementation)
    const categoryButtons = document.querySelectorAll('.category-btn');

    categoryButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        categoryButtons.forEach(btn => {
          btn.classList.remove('bg-primary-600', 'text-white', 'border-primary-600');
          btn.classList.add('bg-white', 'text-gray-700', 'border-gray-200');
        });

        // Add active class to clicked button
        button.classList.remove('bg-white', 'text-gray-700', 'border-gray-200');
        button.classList.add('bg-primary-600', 'text-white', 'border-primary-600');

        // Future: Filter gallery based on category
        const category = button.getAttribute('data-category');
        console.log(`Filtering by category: ${category}`);
      });
    });
  </script>
</MainLayout>
