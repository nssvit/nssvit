---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const teamMembers = await getCollection('team');
const sortedTeam = teamMembers.sort((a, b) => a.data.order - b.data.order);

// Group team members by position
const groupedTeam = sortedTeam.reduce((acc, member) => {
  const position = member.data.position;
  if (!acc[position]) {
    acc[position] = [];
  }
  acc[position].push(member);
  return acc;
}, {} as Record<string, typeof sortedTeam>);
---

<MainLayout
  title="NSS VIT | Our Team"
  description="Meet the dedicated team members of NSS VIT who lead our community service initiatives and social welfare programs."
>
  <Navbar />

  <section class="py-20 bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen">
    <div class="container-custom">
      <div class="text-center mb-16 animate-fade-in">
        <h1 class="section-title">Our Team</h1>
        <p class="section-subtitle">
          Meet the passionate leaders driving positive change in our community
        </p>
      </div>

      <div class="space-y-16">
        {Object.entries(groupedTeam).map(([position, members]) => (
          <div class="animate-slide-up">
            <h2 class="text-3xl md:text-4xl font-bold text-center mb-10 bg-gradient-to-r from-primary-600 to-primary-800 bg-clip-text text-transparent">
              {position}
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
              {members.map((member, index) => (
                <div
                  class="card group hover:scale-105 transition-all duration-300"
                  style={`animation-delay: ${index * 0.1}s`}
                >
                  <div class="relative overflow-hidden">
                    <div class="h-64 w-full bg-gradient-to-br from-primary-100 to-primary-200">
                      <img
                        src={member.data.img || 'https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740560607/img/2024-2025/team/user.webp'}
                        alt={member.data.name}
                        class="h-full w-full object-cover group-hover:scale-110 transition-transform duration-500"
                        loading="lazy"
                      />
                    </div>
                    <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full">
                      <span class="text-sm font-semibold text-primary-600">{member.data.position}</span>
                    </div>
                  </div>

                  <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4 text-center">{member.data.name}</h3>

                    <div class="flex justify-center space-x-3">
                      {member.data.linkedin && (
                        <a
                          href={member.data.linkedin}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="bg-blue-600 hover:bg-blue-700 p-3 rounded-full transition-all duration-300 transform hover:scale-110 shadow-lg hover:shadow-xl"
                          aria-label={`LinkedIn profile of ${member.data.name}`}
                        >
                          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                          </svg>
                        </a>
                      )}
                      <a
                        href={`mailto:${member.data.email}`}
                        class="bg-red-600 hover:bg-red-700 p-3 rounded-full transition-all duration-300 transform hover:scale-110 shadow-lg hover:shadow-xl"
                        aria-label={`Email ${member.data.name}`}
                      >
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M0 3v18h24v-18h-24zm21.518 2l-9.518 7.713-9.518-7.713h19.036zm-19.518 14v-11.817l10 8.104 10-8.104v11.817h-20z"/>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>
