---
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Fetch content collections
const faqs = await getCollection('faqs');
const homeContent = await getCollection('home-content');

const values = homeContent.filter(item => item.data.type === 'value').sort((a, b) => a.data.order - b.data.order);
const objectives = homeContent.filter(item => item.data.type === 'objective').sort((a, b) => a.data.order - b.data.order);
const goals = homeContent.filter(item => item.data.type === 'goal').sort((a, b) => a.data.order - b.data.order);

// Hero carousel images
const heroImages = [
  "https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557660/img/home-carousel/home-carousel-1.jpg",
  "https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557660/img/home-carousel/home-carousel-2.jpg",
  "https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557660/img/home-carousel/home-carousel-3.jpg",
  "https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557660/img/home-carousel/home-carousel-4.jpg",
  "https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557660/img/home-carousel/home-carousel-5.jpg",
  "https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557660/img/home-carousel/home-carousel-6.jpg",
];
---

<MainLayout
  title="NSS VIT | Home"
  description="Welcome to NSS VIT. Join us in our mission to serve society and develop student personalities through community service and social initiatives."
>
  <Navbar />

  <!-- Hero Section -->
  <section class="relative h-screen overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/40 z-10"></div>
    <div id="hero-carousel" class="relative h-full">
      {heroImages.map((image, index) => (
        <div
          class:list={[
            "absolute inset-0 transition-opacity duration-1000",
            index === 0 ? "opacity-100" : "opacity-0"
          ]}
          data-carousel-item={index}
        >
          <img
            src={image}
            alt={`NSS VIT Activity ${index + 1}`}
            class="w-full h-full object-cover"
          />
        </div>
      ))}
    </div>

    <div class="absolute inset-0 z-20 flex items-center justify-center">
      <div class="container-custom text-center text-white space-y-6 animate-fade-in">
        <h1 class="text-5xl md:text-7xl font-display font-bold drop-shadow-2xl">
          Welcome to NSS VIT
        </h1>
        <p class="text-xl md:text-2xl font-medium max-w-3xl mx-auto drop-shadow-lg">
          Not Me But You - Serving the Community, Transforming Lives
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
          <a href="/team" class="btn-primary text-lg">
            Meet Our Team
          </a>
          <a href="/events" class="btn-secondary text-lg">
            Explore Events
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="section-title">About NSS VIT</h2>
        <p class="section-subtitle">
          Empowering students to make a difference through service and community engagement
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6 animate-slide-in">
          <h3 class="text-3xl font-display font-bold text-gray-900">
            Building Tomorrow's Leaders Today
          </h3>
          <p class="text-gray-700 leading-relaxed">
            The National Service Scheme (NSS) at Vidyalankar Institute of Technology is a vibrant community
            of student volunteers dedicated to serving society and developing leadership qualities through
            various social initiatives and community service projects.
          </p>
          <p class="text-gray-700 leading-relaxed">
            Our motto "Not Me But You" reflects our core philosophy of putting others first and working
            collectively for the betterment of society. Through hands-on experience in various social
            service activities, NSS volunteers develop their personality, leadership skills, and social responsibility.
          </p>
          <a href="/team" class="btn-primary inline-flex items-center">
            Learn More About Us
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>

        <div class="relative">
          <img
            src="https://res.cloudinary.com/du6zyqqyw/image/upload/f_auto,q_auto/v1740557668/img/nss-logo.png"
            alt="NSS Logo"
            class="w-full max-w-md mx-auto drop-shadow-2xl animate-fade-in"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Values, Objectives, Goals Tabs -->
  <section class="py-20 bg-gradient-to-br from-blue-50 to-purple-50">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="section-title">Our Foundation</h2>
        <p class="section-subtitle">
          The principles and goals that drive our mission
        </p>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="flex justify-center gap-4 mb-8 flex-wrap">
          <button class="tab-button active" data-tab="values">Values</button>
          <button class="tab-button" data-tab="objectives">Objectives</button>
          <button class="tab-button" data-tab="goals">Goals</button>
        </div>

        <!-- Values Tab -->
        <div id="values-tab" class="tab-content active">
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {values.map((value, index) => (
              <div class="card p-6 text-center animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
                <h3 class="text-xl font-bold text-primary-600 mb-3">{value.data.title}</h3>
                <p class="text-gray-700">{value.data.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Objectives Tab -->
        <div id="objectives-tab" class="tab-content hidden">
          <div class="grid md:grid-cols-2 gap-6">
            {objectives.map((objective, index) => (
              <div class="card p-6 animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
                <h3 class="text-xl font-bold text-primary-600 mb-3">{objective.data.title}</h3>
                <p class="text-gray-700">{objective.data.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Goals Tab -->
        <div id="goals-tab" class="tab-content hidden">
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {goals.map((goal, index) => (
              <div class="card p-6 text-center animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
                <h3 class="text-xl font-bold text-primary-600 mb-3">{goal.data.title}</h3>
                <p class="text-gray-700">{goal.data.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-white">
    <div class="container-custom max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="section-title">Frequently Asked Questions</h2>
        <p class="section-subtitle">
          Find answers to common questions about NSS VIT
        </p>
      </div>

      <div class="space-y-4">
        {faqs.sort((a, b) => a.data.order - b.data.order).map((faq, index) => (
          <div class="bg-white border border-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <button
              class="faq-question w-full flex justify-between items-center p-6 text-left hover:bg-gray-50 transition-colors"
              data-faq-index={index}
            >
              <span class="text-lg font-semibold text-gray-900 pr-8">{faq.data.question}</span>
              <svg class="faq-icon w-6 h-6 text-primary-600 flex-shrink-0 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="faq-answer hidden px-6 pb-6">
              <p class="text-gray-700 leading-relaxed">{faq.data.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />

  <style>
    .tab-button {
      @apply px-8 py-3 rounded-lg font-semibold transition-all duration-300;
      @apply text-gray-700 bg-white border-2 border-gray-200;
      @apply hover:border-primary-600 hover:text-primary-600;
    }

    .tab-button.active {
      @apply bg-primary-600 text-white border-primary-600 shadow-lg;
    }

    .tab-content {
      @apply transition-all duration-300;
    }

    .tab-content.hidden {
      display: none;
    }
  </style>

  <script>
    // Hero Carousel
    let currentSlide = 0;
    const slides = document.querySelectorAll('[data-carousel-item]');
    const totalSlides = slides.length;

    function showSlide(index: number) {
      slides.forEach((slide, i) => {
        if (i === index) {
          slide.classList.remove('opacity-0');
          slide.classList.add('opacity-100');
        } else {
          slide.classList.remove('opacity-100');
          slide.classList.add('opacity-0');
        }
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      showSlide(currentSlide);
    }

    setInterval(nextSlide, 5000);

    // Tabs
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabName = button.getAttribute('data-tab');

        tabButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        tabContents.forEach(content => {
          if (content.id === `${tabName}-tab`) {
            content.classList.remove('hidden');
            content.classList.add('active');
          } else {
            content.classList.add('hidden');
            content.classList.remove('active');
          }
        });
      });
    });

    // FAQ Accordion
    const faqQuestions = document.querySelectorAll('.faq-question');

    faqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        const icon = question.querySelector('.faq-icon');

        // Toggle current FAQ
        answer?.classList.toggle('hidden');
        icon?.classList.toggle('rotate-180');
      });
    });
  </script>
</MainLayout>
