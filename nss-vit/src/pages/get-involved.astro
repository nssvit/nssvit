 */
export const prerender = true;

import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/shared/PageHeader.astro';
import ContactForm from '../components/join/ContactForm';
import { sanityClient } from 'sanity:client';

// Load contact info from Sanity
const contactInfo = await sanityClient.fetch(`
  *[_type == "contactInfo"][0] {
    email,
    phone,
    "addressText": address,
    socialLinks
  }
`);

const ways = [
  {
    title: 'Volunteer With Us',
    description: 'Join our team of dedicated volunteers and make a direct impact in community service activities.',
    icon: 'users',
  },
  {
    title: 'Partner for Events',
    description: 'Collaborate with us on organizing impactful events, drives, and community initiatives.',
    icon: 'calendar',
  },
  {
    title: 'NGO Collaboration',
    description: 'If you represent an NGO, let\'s work together to amplify our social impact.',
    icon: 'globe',
  },
  {
    title: 'Sponsor Our Cause',
    description: 'Support our initiatives through sponsorship and help us reach more communities.',
    icon: 'heart',
  },
];
---

<BaseLayout
  title="Get Involved | NSS VIT"
  description="Join NSS VIT in making a difference. Whether you want to volunteer, collaborate, or partner with us - there are many ways to contribute to our community service initiatives."
>
  <PageHeader
    label="Be The Change"
    title="GET INVOLVED"
    description="There are many ways to contribute to our mission. Whether you're a student, organization, or community member - we'd love to hear from you."
  />

  <section class="max-w-[1400px] mx-auto px-6 sm:px-8 lg:px-10 pb-16 md:pb-24">
    {/* Ways to Get Involved */}
    <div class="mb-10 md:mb-16">
      <h2 class="text-title md:text-headline text-text mb-6 md:mb-8">Ways to Contribute</h2>
      <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6">
        {ways.map((way) => (
          <div class="border border-swiss-gray-200 p-4 md:p-6 hover:border-primary transition-colors group">
            <div class="w-8 h-8 md:w-10 md:h-10 border border-swiss-gray-300 group-hover:border-primary flex items-center justify-center mb-3 md:mb-4 transition-colors">
              {way.icon === 'users' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-swiss-gray-500 group-hover:text-primary transition-colors"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
              )}
              {way.icon === 'calendar' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-swiss-gray-500 group-hover:text-primary transition-colors"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
              )}
              {way.icon === 'globe' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-swiss-gray-500 group-hover:text-primary transition-colors"><circle cx="12" cy="12" r="10"/><line x1="2" x2="22" y1="12" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
              )}
              {way.icon === 'heart' && (
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-swiss-gray-500 group-hover:text-primary transition-colors"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
              )}
            </div>
            <h3 class="text-caption md:text-title font-semibold text-text mb-1 md:mb-2 group-hover:text-primary transition-colors">{way.title}</h3>
            <p class="text-xs md:text-caption text-swiss-gray-600 line-clamp-3">{way.description}</p>
          </div>
        ))}
      </div>
    </div>

    {/* Contact Section */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-12">
      {/* Contact Form */}
      <div class="lg:col-span-2">
        <h2 class="text-title md:text-headline text-text mb-2">Send Us a Message</h2>
        <p class="text-caption md:text-body text-swiss-gray-600 mb-6 md:mb-8">
          Fill out the form below and we'll get back to you within 2-3 business days.
        </p>
        <ContactForm client:load />
      </div>

      {/* Contact Info Sidebar */}
      <div class="lg:col-span-1">
        <div class="bg-swiss-gray-50 border border-swiss-gray-200 p-4 md:p-6 lg:sticky lg:top-24">
          <h3 class="text-caption md:text-title font-semibold text-text mb-4 md:mb-6">Contact Information</h3>

          <div class="space-y-6">
            {contactInfo?.email && (
              <div>
                <span class="text-label text-swiss-gray-500 block mb-1">Email</span>
                <a href={`mailto:${contactInfo.email}`} class="text-body text-primary hover:underline">
                  {contactInfo.email}
                </a>
              </div>
            )}

            {contactInfo?.phone && (
              <div>
                <span class="text-label text-swiss-gray-500 block mb-1">Phone</span>
                <a href={`tel:${contactInfo.phone}`} class="text-body text-text hover:text-primary">
                  {contactInfo.phone}
                </a>
              </div>
            )}

            {contactInfo?.addressText && (
              <div>
                <span class="text-label text-swiss-gray-500 block mb-1">Address</span>
                <p class="text-body text-text">{contactInfo.addressText}</p>
              </div>
            )}

            {!contactInfo?.email && !contactInfo?.phone && (
              <>
                <div>
                  <span class="text-label text-swiss-gray-500 block mb-1">Email</span>
                  <a href="mailto:nss@vit.edu.in" class="text-body text-primary hover:underline">
                    nss@vit.edu.in
                  </a>
                </div>
                <div>
                  <span class="text-label text-swiss-gray-500 block mb-1">Location</span>
                  <p class="text-body text-text">
                    Vidyalankar Institute of Technology<br />
                    Wadala, Mumbai - 400037
                  </p>
                </div>
              </>
            )}
          </div>

          <div class="mt-8 pt-6 border-t border-swiss-gray-200">
            <span class="text-label text-swiss-gray-500 block mb-3">Follow Us</span>
            <div class="flex gap-4">
              <a href="https://instagram.com/nssvit" target="_blank" rel="noopener noreferrer" class="text-swiss-gray-500 hover:text-primary transition-colors" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
              <a href="https://linkedin.com/company/nssvit" target="_blank" rel="noopener noreferrer" class="text-swiss-gray-500 hover:text-primary transition-colors" aria-label="LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
